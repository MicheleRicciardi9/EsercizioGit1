#include <iostream>

using namespace std;

struct Biblioteca
{
    string codiceISBN, titolo, autore, editore;
    int anno_pub;
    float prezzo;
}
int i=0, N=0;
//funzioni
void InserisciLibro(Biblioteca biblioteca[])
{
    cout<<"Codice ISBN"<<endl;
    cin>>biblioteca[i].codiceISBN;
    cout<<"Titolo"<<endl;
    cin>>biblioteca[i].titolo;
    cout<<"Autore"<<endl;
    cin>>biblioteca[i].autore;
    cout<<"Editore"<<endl;
    cin>>biblioteca[i].editore;
    cout<<"Anno di Pubblicazione'"<<endl;
    cin>>biblioteca[i].anno_pub;
    cout<<"Prezzo"<<endl;
    cin>>biblioteca[i].prezzo;
    i++;
    N=i;  
}
void VisualizzaCatalogo(Biblioteca biblioteca[])
{
    cout<<"---------- CATALOGO COMPLETO"<<endl;
    for(i=0;i<N;i++)
    {
        cout<<endl;
        cout<<" | Codice ISBN: "<<biblioteca[i].codiceISBN<<endl;
        cout<<" | Titolo: "<<biblioteca[i].titolo<<endl;
        cout<<" | Autore: "<<biblioteca[i].autore<<endl;
        cout<<" | Editore: "<<biblioteca[i].editore<<endl;
        cout<<" | Anno di Pubblicazione: "<<biblioteca[i].anno_pub<<endl;
        cout<<" | Prezzo: "<<biblioteca[i].prezzo<<endl;
        cout<<endl;
    }
}
string stringa, scelta;
void CancellaLibro(Biblioteca biblioteca[])
{
    cout<<"Digitare Codice ISBN: ";
    cin>>stringa;
    for(i=0;i<N;i++)
    {
        if(stringa==biblioteca[i].codiceISBN)
        {
            cout<<"Vuoi cancellare "<<biblioteca[i].titolo<<" dal catalogo?"<<endl;
            cout<<"s/n: ";
            cin>>scelta;
            if(scelta=="s")
            {
                biblioteca[i].codiceISBN="";
                biblioteca[i].titolo="";
                biblioteca[i].autore="";
                biblioteca[i].editore="";
                biblioteca[i].anno_pub="";
                biblioteca[i].prezzo="";
                for(int j=i+1;j<N;j++)
                {
                    biblioteca[i]=biblioteca[j];
                }
                cout<<"Libro cancellato"<<endl;
            }
            else
            {

            }
        }
        else
        {
            if(i==N-1)
            {
                cout<<"Libro Inesistente"<<endl;
            }
        }
    }
}
void RicercaLibro()
{
    cout<<"Digitare Codice ISBN: ";
    cin>>stringa;
    for(i=0;i<N;i++)
    {
        if(stringa==biblioteca[i].codiceISBN)
        {
            cout<<"----- LIBRO"<<endl;
            cout<<" | Codice ISBN: "<<biblioteca[i].codiceISBN<<endl;
            cout<<" | Titolo: "<<biblioteca[i].titolo<<endl;
            cout<<" | Autore: "<<biblioteca[i].autore<<endl;
            cout<<" | Editore: "<<biblioteca[i].editore<<endl;
            cout<<" | Anno di Pubblicazione: "<<biblioteca[i].anno_pub<<endl;
            cout<<" | Prezzo: "<<biblioteca[i].prezzo<<endl;
            cout<<endl;
        }
        else
        {
            if(i==N-1)
            {
                cout<<"Libro Inesistente"<<endl;
            }
        }
    }
}
