#include <iostream>
#include <string>

using namespace std;

    /*! \mainpage <CENTER> ESERCIZIO GITHUB - TPSIT </CENTER>
    * \author <B> Michele Ricciardi </B>
    * \version <B> V1.0 </B>
    * \date <B> Consegna progetto: 04/05/2022 </B>
    *
    * \section INFORMAZIONI FUNZIONALITÃ€ DEL PROGETTO
    *
    * - Inserimento di un Libro al catalogo della Biblioteca
    * - Visualizzazione del Catalogo
    * - Cancellazione di un Libro dal catalogo
    * - Ricerca di un determinato Libro e le sue informazioni
    * - Modifica delle informazione di un Libro
    *
    *\section CLASS DIAGRAMMA DELLE CLASSI DEL PROGETTO
    * <IMG SRC = "EsercizioGit_CASI_D'USO_IMMAGINE.png" ALT = "Diagramma delle Classi del progetto"/>
    *
    */

//dichiarazioni
struct Biblioteca
{
    string codiceISBN, titolo, autore, editore, anno_pub, prezzo;
};
int i=0, N=0;
string stringa="", scelta="";
//funzioni
void InserisciLibro(Biblioteca biblioteca[])
{
    cout<<"Codice ISBN"<<endl;
    cin>>biblioteca[i].codiceISBN;
    cout<<"Titolo"<<endl;
    cin>>biblioteca[i].titolo;
    cout<<"Autore"<<endl;
    cin>>biblioteca[i].autore;
    cout<<"Editore"<<endl;
    cin>>biblioteca[i].editore;
    cout<<"Anno di Pubblicazione'"<<endl;
    cin>>biblioteca[i].anno_pub;
    cout<<"Prezzo"<<endl;
    cin>>biblioteca[i].prezzo;
    i++;
    N=i;  
}
void VisualizzaCatalogo(Biblioteca biblioteca[])
{
    cout<<"---------- CATALOGO COMPLETO"<<endl;
    for(i=0;i<N;i++)
    {
        cout<<endl;
        cout<<" | Codice ISBN: "<<biblioteca[i].codiceISBN<<endl;
        cout<<" | Titolo: "<<biblioteca[i].titolo<<endl;
        cout<<" | Autore: "<<biblioteca[i].autore<<endl;
        cout<<" | Editore: "<<biblioteca[i].editore<<endl;
        cout<<" | Anno di Pubblicazione: "<<biblioteca[i].anno_pub<<endl;
        cout<<" | Prezzo: "<<biblioteca[i].prezzo<<endl;
        cout<<endl;
    }
}
void CancellaLibro(Biblioteca biblioteca[])
{
    cout<<"Digitare Codice ISBN: ";
    cin>>stringa;
    for(i=0;i<N;i++)
    {
        if(stringa==biblioteca[i].codiceISBN)
        {
            cout<<"Vuoi cancellare "<<biblioteca[i].titolo<<" dal catalogo?"<<endl;
            cout<<"s/n: ";
            cin>>scelta;
            if(scelta=="s")
            {
                for(int j=;j<N;j++)
                {
                    biblioteca[j]=biblioteca[j+1];
                }
                cout<<"Libro cancellato"<<endl;
                N=N-1;
            }
        }
    }
}
void RicercaLibro(Biblioteca biblioteca[])
{
    cout<<"Digitare Codice ISBN: ";
    cin>>stringa;
    for(i=0;i<N;i++)
    {
        if(stringa==biblioteca[i].codiceISBN)
        {
            cout<<"----- LIBRO"<<endl;
            cout<<" | Codice ISBN: "<<biblioteca[i].codiceISBN<<endl;
            cout<<" | Titolo: "<<biblioteca[i].titolo<<endl;
            cout<<" | Autore: "<<biblioteca[i].autore<<endl;
            cout<<" | Editore: "<<biblioteca[i].editore<<endl;
            cout<<" | Anno di Pubblicazione: "<<biblioteca[i].anno_pub<<endl;
            cout<<" | Prezzo: "<<biblioteca[i].prezzo<<endl;
            cout<<endl;
        }
    }
}
void ModificaLibro(Biblioteca biblioteca[])
{
    cout<<"Digitare Codice ISBN: ";
    cin>>stringa;
    for(i=0;i<N;i++)
    {
        if(stringa==biblioteca[i].codiceISBN)
        {
            cout<<"----- MODIFICA"<<endl;
            cout<<"Nuovo Codice ISBN: ";
            cin>>biblioteca[i].codiceISBN;
            cout<<endl;
            cout<<"Nuovo Titolo: ";
            cin>>biblioteca[i].titolo;
            cout<<endl;
            cout<<"Nuovo Autore: ";
            cin>>biblioteca[i].autore;
            cout<<endl;
            cout<<"Nuovo Editore: ";
            cin>>biblioteca[i].editore;
            cout<<endl;
            cout<<"Anno di Pubblicazione: ";
            cin>>biblioteca[i].anno_pub;
            cout<<endl;
            cout<<"Nuovo Prezzo: ";
            cin>>biblioteca[i].prezzo;
            cout<<endl<<"Libro Modificato!"<<endl;
        }
        else
        {
            cout<<"Libro non trovato"<<endl;
        }
    }
}

//main

int main()
{
    //! \brief MAIN del Progetto
    Biblioteca biblioteca[100];
    cout<<" BENVENUTO!"<<endl;
    int selezione;
    do
    {
        cout<<"---------- MENU della BIBLIOTECA"<<endl;
        cout<<" | 1 - Inserisci Nuovo Libro"<<endl;
        cout<<" | 2 - Visualizza CatalogO"<<endl;
        cout<<" | 3 - Cancella Libro"<<endl;
        cout<<" | 4 - Ricerca Libro"<<endl;
        cout<<" | 5 - Modifica Libro"<<endl;
        cout<<" | 6 - Esci dal Menu"<<endl<<endl;
        cout<<" - ";
        cin>>selezione;

        if(selezione==1)
        {
            InserisciLibro(biblioteca);
            cout<<endl;
        }
        else if(selezione==2)
        {
            VisualizzaCatalogo(biblioteca);
            cout<<endl;
        }
        else if(selezione==3)
        {
            CancellaLibro(biblioteca);
            cout<<endl;
        }
        else if(selezione==4)
        {
            RicercaLibro(biblioteca);
            cout<<endl;
        }
        else if(selezione==5)
        {
            ModificaLibro(biblioteca);
            cout<<endl;
        }
    }
    while(selezione!=6);

    return 0;
}
